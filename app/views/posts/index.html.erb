<p id="notice"><%= notice %></p>
<%= form_tag posts_path, :method => 'get' do %> <%#　projects_pathはモデル名で読みかえること %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>
<h1>Listing Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
  <%= link_to "CSV", posts_path(format: :csv), class: "btn btn-primary" %>
  
<%= form_tag  posts_path(format: :csv), :method => 'get' do %> 
  <p class="form-csv">
    <%= text_field_tag :search, params[:search], class:"form-csv" %>
  </p>
   <%= submit_tag "Download as CSV", :name => nil %>
<% end %>